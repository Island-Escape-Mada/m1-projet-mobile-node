       <script src="js/jquery.min.js"></script>
       <script>
       var shown = false;
       $(window).scroll(function () {
           if ($(window).scrollTop() == 0) {
               $('.menu').hide();
               $('.msg').fadeIn(200);
               $('.welcome').animate({
                   height: "220px"
               }, 300);
               shown = false;
           } else if ($(window).scrollTop() > 0 && !shown) {
               $('.menu').fadeIn(200);
               $('.msg').hide();
               $('.welcome').animate({
                   height: "50px"
               }, 300);
               shown = true;
           }
       });
       </script>
